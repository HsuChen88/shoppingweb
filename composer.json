{
    "name": "shawning/shop",
    "description": "ShawningShop E-commerce Platform",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "ShawningShop Team",
            "email": "team@shawning.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "monolog/monolog": "^2.8",
        "robmorgan/phinx": "^0.16.10",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 app/",
        "cs-fix": "phpcbf --standard=PSR12 app/",
        "analyse": "phpstan analyse app/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
