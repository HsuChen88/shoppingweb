# 應用程式環境
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# 資料庫設定
DB_PATH=alldata.db
DB_TYPE=sqlite

# Session 設定
SESSION_LIFETIME=86400
SESSION_NAME=shawning_session

# 安全性設定
CSRF_TOKEN_NAME=_token
COOKIE_SECURE=false
COOKIE_HTTPONLY=true

# 檔案上傳設定
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=./uploads/

# 日誌設定
LOG_LEVEL=debug
LOG_PATH=./logs/

